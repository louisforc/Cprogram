# include <stdio.h>

int lcm (int x,int y);
int gcd (int x,int y);

int main()
{
    int a,b;
    int t;
    
    printf("输入两个正整数:");
    scanf("%d%d",&a,&b);
    
    if(a>b)
    {
        t=a;
        a=b;
        b=t;
    }
    
    printf("最小公倍数是%d\n",lcm(a,b));
    printf("最大公约数是%d\n",gcd(a,b));
    
    return 0;
}

//求最小公倍数
int lcm (int x,int y)
{
    int n=1;
    int lcm;
    for(lcm=x;0!=lcm%y;++n)
    {
        lcm = n*x;
    }
    return (lcm);
}
//求最大公约数
int gcd (int x,int y)
{
    
    int t;
    while(x!=0)
    {
        t = y%x;
        y = x;
        x = t;
    }
    return(y);
}
