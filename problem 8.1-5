f(x,n)  
int x[],n;  
{int *p0,*p1,i,j,t,y;  
i=j=x[0];p0=p1=x;  
for(y=0;y<n;y++)  
{if(x[y]>i)   
{i=x[y];p0=&x[y];}  
else if(x[y]<j)  
{j=x[y];p1=&x[y];}}  
t=*p0;*p0=x[n-1];x[n-1]=t;  
t=*p1;*p1=x[0];x[0]=t;  
return;  
}  
